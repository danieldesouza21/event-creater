<div>
  <div>
    <h1>
      Events in Hyde Park
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new event
    </h2>

    <form action="/insert_event" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="date_time_box">
          Date
        </label>

        <input type="date" id="date_time_box" name="query_date_time">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location">
      </div>

      <div>
        <label for="duration_box">
          Time
        </label>

        <input type="text" id="duration_box" name="query_duration">
      </div>


      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <button>
        Create event
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Date
        </th>

        <th>
          Title
        </th>


        <th>
          Location
        </th>

        <th>
          Time
        </th>

        <th>
          Owner
        </th>

        <th>
          Description
        </th>

        <th>
          Image
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_events.each do |an_event| %>
      <tr>

        <td>
          <%= an_event.date_time %>
        </td>

        <td>
          <%= an_event.title %>
        </td>

        <td>
          <%= an_event.location %>
        </td>

        <td>
          <%= an_event.duration %>
        </td>

        <td>
          <%= User.where({:id => an_event.owner_id}).at(0).first_name %>
        </td>

        <td>
          <%= an_event.description %>
        </td>

        <td>
          <%= an_event.image %>
        </td>

        <td>
          <%= time_ago_in_words(an_event.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_event.updated_at) %> ago
        </td>

        <td>
          <a href="/events/<%= an_event.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
